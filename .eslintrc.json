{
	"env": {
		"browser": true,
		"mocha": true
	},
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"project": "./tsconfig.json",
		"tsconfigRootDir": "."
	},
	"plugins": ["@typescript-eslint"],
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/eslint-recommended",
		"plugin:@typescript-eslint/recommended",
		"xo",
		"xo-typescript",
		"prettier"
	],
	"overrides": [
		{
			"files": ["**/*.test.ts"],
			"rules": {
				"@typescript-eslint/no-non-null-assertion": "off"
			}
		}
	]
}
