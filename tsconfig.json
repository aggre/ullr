{
	"compilerOptions": {
		"target": "es2015",
		"lib": ["es2015", "es2016", "es2017", "dom"],
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"strictNullChecks": true,
		"declaration": true,
		"outDir": "dist",
		"rootDir": ".",
		"module": "esnext",
		"plugins": [
			{
				"name": "typescript-lit-html-plugin"
			}
		]
	},
	"include": ["src/**/*", "eslint.config.mjs"],
	"exclude": []
}
